<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RadioButton
        android:id="@+id/rbtnPreuzimam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/txtPoruka"
        android:layout_marginTop="38dp"
        android:buttonTint="@color/colorPrimary"
        android:text="Preuzimam odmah" />

    <RadioButton
        android:id="@+id/rbtnKasnije"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/rbtnPreuzimam"
        android:layout_below="@+id/rbtnPreuzimam"
        android:layout_marginTop="25dp"
        android:buttonTint="@color/colorPrimary"
        android:text="Preuzet ću kasnije" />

    <RadioButton
        android:id="@+id/rbtnOdbijam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/rbtnKasnije"
        android:layout_below="@+id/rbtnKasnije"
        android:layout_marginTop="29dp"
        android:buttonTint="@color/colorPrimary"
        android:text="Ne želim preuzeti ovaj zadatak" />

    <EditText
        android:id="@+id/txtPoruka"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/rbtnOdbijam"
        android:layout_marginStart="30dp"
        android:layout_marginTop="27dp"
        android:ems="10"
        android:hint="Unesite odgovor"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btnPotvrdi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtPoruka"
        android:layout_marginTop="49dp"
        android:layout_toEndOf="@+id/rbtnOdbijam"
        android:text="Potvrdi" />

</RelativeLayout>